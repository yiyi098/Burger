
<div class="jumbotron jumbotron-fluid" style='background: #f4b042;'>
  <div class="container">
    <h1 class="display-4" style='text-align:center;'>Burgers!</h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2 style='text-align:center;'>Ready to be devoured!</h2>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2 style='text-align:center;'>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add Burger</button>
        <img style="width:400px;height:400px;" src='https://upload.wikimedia.org/wikipedia/commons/thumb/b/b5/Emoji_u1f354.svg/2000px-Emoji_u1f354.svg.png'>
      </form>
    </div>
    <div class="col-sm">
      <h2 style='text-align:center;'>DEVOURED!</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>




